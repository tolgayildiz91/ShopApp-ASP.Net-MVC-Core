@model ProductModel
@{
    ViewData["Title"] = "Edit";
}


<h1>Edit Product</h1>

<hr />


<form asp-controller="Admin" asp-action="EditProduct" method="post">
<div class="row">
    <div class="col-md-8">
            <input type="hidden" name="Id" value="@Model.Id" />
            <div class="form-group row">
                <label asp-for="Name" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="ImageUrl" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="ImageUrl" value="@Model.ImageUrl" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="Description" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control">
                        @Model.Description
                    </textarea>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <label asp-for="Price" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input asp-for="Price" value="@Model.Price" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-md-10 offset-md-2">
                    <button type="submit" value="Save Product" class="btn btn-primary">Save Product</button>
                </div>
            </div>
    </div>
    <div class="col-md-4">
            @foreach (var item in (List<Category>)ViewBag.Categories)
            {
                <div class="custom-control custom-checkbox">
                    <input class="custom-control-input" 
                    name="categoryIds"
                    value="@item.Id"
                    type="checkbox"
                    id="category@(item.Id)" 
                    @(Model.SelectedCategories.Any(i=>i.Id==item.Id)?"checked":"")>
                    <label class="custom-control-label" for="category@(item.Id)">@item.Name</label>
                </div>
            }
    </div>
</div>

</form>
